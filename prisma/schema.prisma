generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id             Int         @id @default(autoincrement())
  email          String      @unique
  password       String
  phoneNo        String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  firstName      String
  lastName       String?
  lastLogin      DateTime?
  profilePicture String?
  isActive       Boolean     @default(true)
  role           String?
  orders         Order[]     // Relationship with Order
}

model Item {
  id              Int       @id @default(autoincrement())
  name            String
  breed           String
  images          String[]
  price           Int
  description     String
  discountedPrice Int
  isDiscounted    Boolean
  weight          Float
  height          Float
  age             Float
  sex             String
  nature          String
  specifications  String
  type            String
  availability    Boolean
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  orders          Order[]   // Relationship with Order
}

model Order {
  id              Int      @id @default(autoincrement())
  date            DateTime @default(now())
  items           Item[]   // Relationship with Item
  total           Int
  status          String
  seller          User     @relation(fields: [sellerId], references: [id]) // Relationship with User
  sellerId        Int
  buyersName      String
  buyersPhoneNo   String
  buyersAddress   String
  buyersMessage   String
}